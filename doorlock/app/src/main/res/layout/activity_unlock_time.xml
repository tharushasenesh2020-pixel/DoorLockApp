<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/img_f"
    tools:context=".UnlockTimeActivity">

    <TextView
        android:id="@+id/title"
        android:text="Unlock Time Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/btn1Hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock for 1 Hour"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn2Hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock for 2 Hours"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn3Hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock for 3 Hours"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn5Hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock for 5 Hours"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/btnLockNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”’ Lock Instantly"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white" />

</LinearLayout>
